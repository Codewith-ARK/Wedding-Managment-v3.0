include header
div(class="drawer lg:drawer-open")
  input#my-drawer.drawer-toggle(type='checkbox')
  .drawer-content
    label(for='my-drawer' class="drawer-button btn btn-primary fixed left-0 rounded-ee-sm")
      svg(width="20" height="20" xmlns="http://www.w3.org/2000/svg" fill="black" viewBox="0 0 24 24" class="inline-block h-5 w-5 stroke-current md:h-6 md:w-6")
        path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16")

    section(class="p-7")
      block body
  .drawer-side
    label.drawer-overlay(for='my-drawer', aria-label='close sidebar')
    ul.menu.bg-base-200.text-base-content.min-h-full.w-80.p-4
      // Sidebar content here
      li: a(href="/dashboard") Dashboard
      li: a(href="/venues") Venues
      li: a(href="/user/reservations") Reservations
      li: a(href="/user/account") Account

