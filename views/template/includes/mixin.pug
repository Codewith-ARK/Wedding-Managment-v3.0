mixin heading(text)
  h1(class="mt-6 text-5xl font-bold")=text

mixin subheading(text)
  h2(class="mb-6")=text

mixin breadcrumb(...links)
  .breadcrumbs.text-sm
    ul
      each link in links
        li
          a(href=`/${link}`)=link

mixin navigation()
  button.btn.btn-sm.btn-outline(onclick="history.back()") Go back

mixin formInput(labelText, name)
  div 
    label(for="" class="form-control w-full max-w-xs") 
    .label 
      label(for="" class="label-text")=labelText
    input(type="text" placeholder="" class="input input-bordered w-full max-w-xs" name=name)

mixin card(id, name, address, image_url)
  div(class="card card-compact")
    img(class="rounded-xl aspect-square object-cover w-full" src=image_url alt="Shoes")
    div(class="card-body")
      h2(class="card-title")=name
      p=address
      div(class="card-actions justify-end")
        a(class="btn btn-outline" href=`/venue/view/${id}`) View Details