mixin heading(text)
  h1(class="mt-6 text-5xl font-bold")=text

mixin subheading(text)
  h2(class="mb-6")=text

mixin breadcrumb(...links)
  .breadcrumbs.text-sm
    ul
      each link in links
        li
          a(href=`/${link}`)=link

mixin navigation()
  a.btn.btn-sm Go back

mixin formInput(labelText, value)
    label(for="" class="form-control w-full max-w-xs") 
    .label 
      label(for="" class="label-text")=labelText
    input(type="text" placeholder="Type here" class="input input-bordered w-full max-w-xs" value=value)
